{
  "indentation": {
    "character": "    "
  },
  "whitespace": {
    "typeHintColonPolicy": "after"
  },
  "wrapping": {
    "maxLineLength": 80,
    "arrayWrap": {
      "rules": [
        {
          "conditions": [
            { "cond": "exceedsMaxLineLength" },
            { "cond": "itemCount >= n", "value": 2 }
          ],
          "type": "fillLineWithLeadingBreak"
        }
      ]
    },
    "callParameter": {
      "rules": [
        {
          "conditions": [
            { "cond": "lineLength >= n", "value": 100 },
            { "cond": "anyItemLength >= n", "value": 25 }
          ],
          "type": "onePerLine"
        },
        {
          "conditions": [
            { "cond": "exceedsMaxLineLength" },
            { "cond": "itemCount <= n", "value": 1 }
          ],
          "type": "onePerLine"
        },
        {
          "conditions": [{ "cond": "exceedsMaxLineLength" }],
          "type": "fillLineWithLeadingBreak"
        }
      ]
    },
    "functionSignature": {
      "rules": [
        {
          "conditions": [{ "cond": "exceedsMaxLineLength" }],
          "type": "fillLineWithLeadingBreak"
        }
      ]
    },
    "methodChain": {
      "rules": [
        {
          "conditions": [{ "cond": "exceedsMaxLineLength" }],
          "type": "onePerLine"
        }
      ]
    },
    "opAddSubChain": {
      "rules": [
        {
          "conditions": [{ "cond": "exceedsMaxLineLength" }],
          "type": "equalNumber"
        }
      ]
    },
    "opBoolChain": {
      "rules": [
        {
          "conditions": [{ "cond": "exceedsMaxLineLength" }],
          "type": "onePerLine"
        }
      ]
    }
  }
}
