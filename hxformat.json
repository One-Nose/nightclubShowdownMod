{
  "indentation": {
    "character": "    "
  },
  "whitespace": {
    "typeHintColonPolicy": "after"
  },
  "wrapping": {
    "maxLineLength": 80,
    "arrayWrap": {
      "rules": [
        {
          "conditions": [
            { "cond": "exceedsMaxLineLength" },
            { "cond": "itemCount >= n", "value": 2 }
          ],
          "type": "fillLineWithLeadingBreak"
        }
      ]
    },
    "callParameter": {
      "rules": [
        {
          "conditions": [{ "cond": "exceedsMaxLineLength" }],
          "type": "fillLineWithLeadingBreak"
        }
      ]
    },
    "functionSignature": {
      "rules": [
        {
          "conditions": [{ "cond": "exceedsMaxLineLength" }],
          "type": "fillLineWithLeadingBreak"
        }
      ]
    },
    "opBoolChain": {
      "rules": [
        {
          "conditions": [{ "cond": "exceedsMaxLineLength" }],
          "type": "onePerLine"
        }
      ]
    }
  }
}
